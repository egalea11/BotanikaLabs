@model IEnumerable<BotanikaLabs.Models.Plant>

@{
    ViewBag.Title = "PlantsGrid";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- left-side fixed navigation -->
<div class="container-fluid">
    <div class="row">

        @*side navigation bar*@
        @Html.Partial("_SideNav")   

        <div class="col-sm-9 col-lg-10">
            <!-- your page content -->
            <!-- Page Content -->
            <div class="container">
                <div class="row">
                    @* Page Title *@
                    <div class="col-lg-12">
                        <h1 class="page-header">Potted Plants and Trees</h1>
                    </div>

                    @* items *@
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 col-md-4 col-xs-6 thumb">
                            <span><b>@Html.DisplayFor(modelItem => item.Quantity)</b> @Html.DisplayFor(modelItem => item.Name) </span>
                            <br />
                            <img class="plant-image" src="@Url.Content(item.ImageURL)" alt="@Html.DisplayFor(modelItem => item.Name)" />
                            <br />
                            <span>Planted on: <b>@Html.DisplayFor(modelItem => item.DatePlanted)</b></span>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>